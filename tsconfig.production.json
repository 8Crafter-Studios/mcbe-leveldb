{
    "compilerOptions": {
        "target": "esnext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        // "outDir": "./",
        // "rootDir": "./",
        "declaration": true,
        // "declarationDir": "./",
        "sourceMap": true,
        "declarationMap": false,
        "lib": ["ESNext"],
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        // "exactOptionalPropertyTypes": true, // TODO: Adjust the NBTSchemaTypes generator to include ` | undefined` so that this can be enabled.
        "rewriteRelativeImportExtensions": true,
        "noCheck": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": false
    },
    "include": ["index.ts"]
}
